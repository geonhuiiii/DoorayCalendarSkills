{
  "id": "openclaw-dooray-calendar-sync",
  "version": "1.0.0",
  "description": "Dooray·Apple·Google 캘린더 통합 동기화 스킬",
  "configSchema": {
    "type": "object",
    "properties": {
      "dooray": {
        "type": "object",
        "description": "Dooray 캘린더 설정",
        "properties": {
          "tenantId": { "type": "string", "description": "Dooray 테넌트 ID" },
          "username": { "type": "string", "description": "Dooray 로그인 이메일" },
          "password": { "type": "string", "description": "Dooray 비밀번호" }
        },
        "required": []
      },
      "google": {
        "type": "object",
        "description": "Google 캘린더 설정 (선택)",
        "properties": {
          "clientId": { "type": "string" },
          "clientSecret": { "type": "string" },
          "refreshToken": { "type": "string" },
          "calendarId": { "type": "string", "default": "primary" }
        },
        "required": []
      },
      "apple": {
        "type": "object",
        "description": "Apple 캘린더 설정 (선택)",
        "properties": {
          "username": { "type": "string" },
          "appSpecificPassword": { "type": "string" }
        },
        "required": []
      },
      "syncIntervalMinutes": {
        "type": "number",
        "default": 15,
        "description": "동기화 간격 (분)"
      }
    },
    "required": []
  }
}
